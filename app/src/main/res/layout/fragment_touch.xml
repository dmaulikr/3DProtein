<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    tools:context="com.ece1778.foldr.fragments.TouchFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/circle_grey"
            android:id="@+id/up" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/circle_grey"
            android:id="@+id/down" />

    </LinearLayout>

    <AbsoluteLayout
        android:layout_width="99dp"
        android:layout_height="99dp">
        <ImageView
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:src="@drawable/control_frame"/>

        <ImageView
            android:layout_width="37dp"
            android:layout_height="33dp"
            android:id="@+id/in"
            android:layout_x="32dp"
            android:layout_y="1dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:id="@+id/right"
            android:layout_x="66dp"
            android:layout_y="32dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/left"
            android:layout_x="1dp"
            android:layout_y="33dp" />
        <ImageView
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:id="@+id/out"
            android:layout_x="32dp"
            android:layout_y="66dp" />
    </AbsoluteLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu"
                android:layout_marginRight="5dp"
                android:layout_weight="1">
            </ImageView>
            <ImageView
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/help"
                android:layout_weight="1"></ImageView>
        </LinearLayout>
    </RelativeLayout>
    <GridLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:rowCount="3"
        android:columnCount="3">
        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/circle_yellow"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/y"></ImageView>
        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/circle_blue"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/x"></ImageView>
        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/circle_red"
            android:layout_row="1"
            android:layout_column="2"
            android:id="@+id/z"></ImageView>
        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/circle_green"
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/done"
            ></ImageView>
        </GridLayout>

</LinearLayout>
